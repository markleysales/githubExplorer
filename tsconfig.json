{
  "compilerOptions": {                        
    "lib": ["dom", "DOM.Iterable", "esnext"],                                      
    "jsx": "react-jsx",                                
    "resolveJsonModule": true,
    "isolatedModules": true,                                                      
    "moduleResolution": "node",                                                    
    "allowJs": true,                                                  
    "noEmit": true,                                                                               
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                                                 
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true                               
  },
  "include": ["src", ".jsx", ".tsx"]
}
